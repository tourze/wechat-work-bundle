{
  "name": "tourze/wechat-work-bundle",
  "description": "企业微信能力模块",
  "type": "symfony-bundle",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "doctrine/dbal": "^3.7.0 || ^4.0",
    "doctrine/doctrine-bundle": "^2.13",
    "doctrine/persistence": "^3.1 || ^4",
    "symfony/config": "^6.4",
    "symfony/dependency-injection": "^6.4",
    "symfony/http-kernel": "^6.4",
    "symfony/framework-bundle": "^6.4",
    "tourze/enum-extra": "~0.0.5",
    "tourze/xml-helper": "0.0.*",
    "tourze/easy-admin-attribute": "0.0.*",
    "tourze/doctrine-indexed-bundle": "0.0.*",
    "tourze/doctrine-track-bundle": "0.0.*",
    "tourze/weui-bundle": "0.0.*"
  },
  "autoload": {
    "psr-4": {
      "WechatWorkBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WechatWorkBundle\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "phpstan": "phpstan analyse src -l 1"
  }
}